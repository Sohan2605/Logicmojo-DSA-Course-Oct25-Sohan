class Solution {
    public int[] twoSum(int[] nums, int target) {
        int len = nums.length;

        Map<Integer, Integer> mp = new HashMap<>();

        for(int i=0;i<len;i++){
            int need = target - nums[i];
            if(mp.containsKey(need)){
                return new int[]{mp.get(need) , i};
            }
            mp.put(nums[i],i);
        }

        return new int[]{-1,-1};
    }
}